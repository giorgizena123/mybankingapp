<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mybankingapp.controller.RegisterController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="რეგისტრაცია">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>
    <TextField fx:id="firstNameField" promptText="სახელი" />
    <TextField fx:id="lastNameField" promptText="გვარი" />
    <TextField fx:id="usernameField" promptText="მომხმარებლის სახელი" />
    <PasswordField fx:id="passwordField" promptText="პაროლი" />
    <!-- IBAN will be auto-generated by the backend logic -->
    <Button onAction="#handleRegister" text="რეგისტრაცია" />
    <Hyperlink onAction="#handleLoginLink" text="უკვე გაქვთ ანგარიში? შედით" />
    <Label fx:id="statusLabel" textFill="RED" />
</VBox>