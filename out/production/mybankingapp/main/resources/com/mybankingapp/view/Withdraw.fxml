<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="15.0" xmlns="[http://javafx.com/javafx/21](http://javafx.com/javafx/21)" xmlns:fx="[http://javafx.com/fxml/1](http://javafx.com/fxml/1)" fx:controller="com.mybankingapp.controller.WithdrawController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
    <Label text="თანხის გამოტანა">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>
    <TextField fx:id="amountField" promptText="თანხა" />
    <Button onAction="#handleWithdrawButton" text="გამოტანა" prefWidth="150.0" prefHeight="40.0" /> <Button onAction="#handleBackButton" text="უკან" prefWidth="150.0" prefHeight="40.0" />
    <Label fx:id="messageLabel" textFill="RED">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
</VBox>